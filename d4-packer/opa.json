{
  "variables": {
      "ami_id": "ami-03d315ad33b9d49c4",
      "aws_region": "us-east-1",
      "ssh_username": "ubuntu",
      "aws_vpc_id": "{{env `VPC_ID`}}",
      "subnet_id": "{{env `SUBNET_ID`}}",
      "hash_commit": "{{env `DRONE_COMMIT`}}"
  },

  "builders": [{
    "type": "amazon-ebs",
    "region": "{{user `aws_region`}}",
    "source_ami": "{{user `ami_id`}}",
    "subnet_id":"{{user `subnet_id`}}",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "IaasWeek-{{user `hash_commit`}}",
    "vpc_id": "{{user `aws_vpc_id`}}"
  }],
 
  "provisioners": [
    {
      "type": "shell",
      "script":"./provisioners/scripts/install_python.sh"
    },
    {
      "type": "ansible",
      "playbook_file": "./provisioners/ansible/setup-k8s.yml",
      "user": "{{user `ssh_username`}}",
      "ansible_env_vars": [
        "ANSIBLE_HOST_KEY_CHECKING=False"
      ]
    }
  ]
}